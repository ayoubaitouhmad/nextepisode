# JWT Configuration
JWT_SECRET=VerySecretKeyThatShouldBeLongEnoughChangeMe
JWT_EXPIRATION_MS=3600000

# PostgreSQL Master User (only for initialization)
POSTGRES_DB=postgres
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_PORT=5432

# Auth Service - Separate Database
# HOST port: 8080, CONTAINER port: 8080 (inside Docker)
AUTH_SERVICE_PORT=8080
AUTH_SERVICE_HOST=auth-service
AUTH_DB_HOST=postgres
AUTH_DB_PORT=5432
AUTH_DB_NAME=authdb
AUTH_DB_USER=authdbuser
AUTH_DB_PASSWORD=authdbpass

# TMDB Service - Separate Database
# HOST port: 8083, CONTAINER port: 8080 (inside Docker)
TMDB_SERVICE_PORT=8083
TMDB_SERVICE_HOST=tmdb-service
TMDB_DB_HOST=postgres
TMDB_DB_PORT=5432
TMDB_DB_NAME=tmdbdb
TMDB_DB_USER=tmdbdbuser
TMDB_DB_PASSWORD=tmdbdbpass

# User Service - Separate Database
# HOST port: 8082, CONTAINER port: 8080 (inside Docker)
USER_SERVICE_PORT=8082
USER_SERVICE_HOST=user-service
USER_DB_HOST=postgres
USER_DB_PORT=5432
USER_DB_NAME=userdb
USER_DB_USER=userdbuser
USER_DB_PASSWORD=userdbpass

# API Gateway
# HOST port: 8081, CONTAINER port: 8080 (inside Docker)
GATEWAY_SERVICE_PORT=8081